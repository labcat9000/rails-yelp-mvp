<h1>New Restaurant</h1>
<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name, label: "Restaurant name" %>
  <%= f.input :address, label: "Restaurant address" %>
  <%= f.input :category, as: :select, collection: ["Belgian", "Chinese", "French", "Italian", "Japanese"], prompt: 'Select Category', label: "Cuisine" %>
  <%= f.submit "Add restaurant", class: "btn btn-primary" %>
<% end %>
